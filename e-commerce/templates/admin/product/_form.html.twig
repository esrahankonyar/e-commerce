<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Ürün Form
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" method="post">
                            <div class="form-group">
                                <label>Kategorisi</label>
                                <select name="product[category_id]" class="form-control">
                                    {% if (catname) %}
                                    <option value="{{ product.categoryid }}">{{ catname[0].title}}</option>
                                    {% endif %}
                                    {% for cat in catlist %}
                                        <option value="{{ cat.id }}">{{ cat.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Title (Başlık)</label>
                                <input type="text" name="product[title]" value="{{ product.title }}" class="form-control" required="required" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label>Keywords (Anahtar Kelimeler)</label>
                                <input type="text" name="product[keywords]" value="{{ product.keywords }}" class="form-control" placeholder="Anahtar Kelime">
                            </div>
                            <div class="form-group">
                                <label>Description (Kısa Açıklama)</label>
                                <input type="text" name="product[description]" value="{{ product.description }}" class="form-control" placeholder="Kısa Açıklama">
                            </div>
                            <div class="form-group">
                                <input type="hidden"  name="product[image]" value="{{ product.image }}" class="form-control">
                            </div>
                            <div class="form-group">
                                <label>Alış Fiyatı</label>
                                <input type="text" name="product[pprice]" value="{{ product.pprice }}" class="form-control" placeholder="Kısa Açıklama">
                            </div>
                            <div class="form-group">
                                <label>Satış Fiyatı</label>
                                <input type="text" name="product[sprice]" value="{{ product.sprice }}" class="form-control" placeholder="Kısa Açıklama">
                            </div>
                            <div class="form-group">
                                <label>Miktar</label>
                                <input type="text" name="product[amount]" value="{{ product.amount }}" class="form-control" placeholder="Kısa Açıklama">
                            </div>
                            <div class="form-group">
                                <label>Detay</label>
                                <textarea id="detail" name="product[detail]" rows="10" >{{ product.detail }}</textarea>
                            </div>
                            <div class="form-group col-lg-5">
                                <label>DURUM</label>
                                <select name="product[status]" class="form-control">
                                    <option >{{ product.status }}</option>
                                    <option value="True">True</option>
                                    <option  value="False">False</option>
                                </select>
                            </div>
                            <div class="form-group col-lg-5">
                                <label>SLİDER</label>
                                <select name="product[slider]" class="form-control">
                                    <option>{{ product.slider }}</option>
                                    <option value="True">True</option>
                                    <option value="False">False</option>
                                </select>
                            </div>
                            <br/><br/><br/><br/>
                            <button type="submit" class="btn btn-outline btn-success">KAYDET</button>
                        </form>
                        <script>
                            ClassicEditor
                                .create( document.querySelector( '#detail' ) )
                                .catch( error => {
                                    console.error( error );
                                } );
                        </script>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
