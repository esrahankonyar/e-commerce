{% extends 'adminbase.html.twig' %}
{% block title %}Mesaj Listesi{% endblock %}
{% block content %}
    <h1 class="page-header">Mesaj Listesi
    </h1>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="table-responsive">
                        <div id="dataTables-example_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-striped table-bordered table-hover dataTable no-footer" id="dataTables-example" role="grid" aria-describedby="dataTables-example_info">

                                        <thead>
                                        <tr>
                                            <th>Id</th>
                                            <th>Ad</th>
                                            <th>Email</th>
                                            <th>Konu</th>
                                            <th>Mesaj</th>
                                            <th>Yorum</th>
                                            <th>Durum</th>
                                            <th>Oku</th>
                                            <th>Sil</th>
                                        </tr>
                                        </thead>
                                        <tbody>
                                        {% for message in messages %}
                                            <tr>
                                                <td>{{ message.id }}</td>
                                                <td>{{ message.name }}</td>
                                                <td>{{ message.email }}</td>
                                                <td>{{ message.subject }}</td>
                                                <td>{{ message.message }}</td>
                                                <td>{{ message.comment }}</td>
                                                <td>{{ message.status }}</td>
                                                <td>
                                                    <a href="javascript:openWin('{{ path('admin_messages_show', {'id': message.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=100,left=200, menuBar=no, scrollBars=no,resizable=no, width=600,height=500');">
                                                        MesajÄ± Oku
                                                    </a>
                                                </td>
                                                <td>
                                                    {{ include ('admin/messages/_delete_form.html.twig') }}
                                                </td>
                                            </tr>
                                        {% else %}
                                            <tr>
                                                <td colspan="8">no records found</td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>

                                    <a href="{{ path('admin_messages_new') }}">Create new</a>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
{% endblock %}
