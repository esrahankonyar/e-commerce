{{ include ('admin/messages.html.twig') }}
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-12">
                        <form role="form" method="post">
                            <div class="col-lg-12">
                                <div class="panel tabbed-panel panel-default">
                                    <div class="panel-heading clearfix">

                                        <div class="pull-left">
                                            <ul class="nav nav-tabs">
                                                <li class="active"><a href="#tab-default-1" data-toggle="tab">Genel Bilgiler</a></li>
                                                <li><a href="#tab-default-2" data-toggle="tab">Email Server</a></li>
                                                <li><a href="#tab-default-3" data-toggle="tab">Hakkımızda</a></li>
                                                <li><a href="#tab-default-4" data-toggle="tab">İletişim</a></li>
                                                <li><a href="#tab-default-5" data-toggle="tab">Referanslar</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                    <div class="panel-body">
                                        <div class="tab-content">
                                            <div class="tab-pane fade in active" id="tab-default-1">
                                                <div class="form-group">
                                                    <label>Adı</label>
                                                    <input type="text" name="setting[title]" value="{{ setting.title }}" class="form-control"  placeholder="Title">
                                                </div>
                                                <div class="form-group">
                                                    <label>Keywords (Anahtar Kelimeler)</label>
                                                    <input type="text" name="setting[keywords]" value="{{ setting.keywords }}" class="form-control"  placeholder="Anahtar Kelime">
                                                </div>
                                                <div class="form-group">
                                                    <label>Description (Kısa Açıklama)</label>
                                                    <input type="text" name="setting[description]" value="{{ setting.description }}" class="form-control"  placeholder="Kısa Açıklama">
                                                </div>
                                                <div class="form-group">
                                                    <label>Firma Adı</label>
                                                    <input type="text" name="setting[company]" value="{{ setting.company }}" class="form-control"  placeholder="Firma Adı">
                                                </div>
                                                <div class="form-group">
                                                    <label>Adresi</label>
                                                    <input type="text" name="setting[address]" value="{{ setting.address }}" class="form-control"  placeholder="Adres">
                                                </div>
                                                <div class="form-group">
                                                    <label>Fax</label>
                                                    <input type="text" name="setting[fax]" value="{{ setting.fax }}" class="form-control"  placeholder="Fax">
                                                </div>
                                                <div class="form-group col-lg-5">
                                                    <label>DURUM</label>
                                                    <select name="setting[status]" class="form-control">
                                                        <option>{{ setting.status }}</option>
                                                        <option value="True">True</option>
                                                        <option selected value="False">False</option>
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="tab-pane fade" id="tab-default-2">
                                                <div class="form-group">
                                                    <label>Email Server</label>
                                                    <input type="text" name="setting[smtpserver]" value="{{ setting.smtpserver }}" class="form-control"  placeholder="">
                                                </div>
                                                <div class="form-group">
                                                    <label>Email</label>
                                                    <input type="text" name="setting[smtpemail]" value="{{ setting.smtpemail }}" class="form-control"  placeholder="">
                                                </div>
                                                <div class="form-group">
                                                    <label>Email Şifre</label>
                                                    <input type="text" name="setting[smtppassword]" value="{{ setting.smtppassword }}" class="form-control"  placeholder="">
                                                </div>
                                                <div class="form-group">
                                                    <label>SMTP Port</label>
                                                    <input type="text" name="setting[smtpport]" value="{{ setting.smtpport }}" class="form-control"  placeholder="">
                                                </div>
                                            </div>
                                            <div class="tab-pane fade" id="tab-default-3">
                                                <div class="form-group">
                                                    <textarea id="aboutus" name="setting[aboutus]" rows="10" >{{ setting.aboutus }}</textarea>
                                                </div>
                                            </div>
                                            <div class="tab-pane fade" id="tab-default-4">
                                                <div class="form-group">
                                                    <textarea id="contact" name="setting[contact]" rows="10" >{{ setting.contact }}</textarea>
                                                </div>
                                            </div>
                                            <div class="tab-pane fade" id="tab-default-5">
                                                <div class="form-group">
                                                    <textarea id="referances" name="setting[referances]" rows="10" >{{ setting.referances }}</textarea>
                                                </div>
                                            </div>
                                            <button type="submit" class="btn btn-outline btn-success">KAYDET</button>
                                        </div>

                                    </div>

                                </div>
                                <!-- /.panel -->
                            </div>

                        </form>
                        <script>
                            ClassicEditor
                                .create( document.querySelector( '#aboutus' ) )
                                .catch( error => {
                                    console.error( error );
                                } );
                        </script>
                        <script>
                            ClassicEditor
                                .create( document.querySelector( '#contact' ) )
                                .catch( error => {
                                    console.error( error );
                                } );
                        </script>
                        <script>
                            ClassicEditor
                                .create( document.querySelector( '#referances' ) )
                                .catch( error => {
                                    console.error( error );
                                } );
                        </script>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
