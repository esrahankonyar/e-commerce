<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Kategori Form
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-lg-6">
                        <form role="form" method="post">
                            <div class="form-group">
                                <label>Üst Kategori</label>
                                <select name="category[parentid]" class="form-control">
                                    {% if category.parentid!=0 %}
                                        <option value="{{ category.parentid }}">{{ catname.title }}</option>
                                    {% else %}
                                        <option value="0">Ana Kategori</option>
                                    {% endif %}
                                    <option value="0">Ana Kategori</option>
                                    {% for cat in catlist %}
                                        <option value="{{ cat.id }}">{{ cat.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Title (Başlık)</label>
                                <input type="text" name="category[title]" value="{{ category.title }}" class="form-control" required="required" placeholder="Title">
                            </div>
                            <div class="form-group">
                                <label>Keywords (Anahtar Kelimeler)</label>
                                <input type="text" name="category[keywords]" value="{{ category.keywords }}" class="form-control" required="required" placeholder="Anahtar Kelime">
                            </div>
                            <div class="form-group">
                                <label>Description (Kısa Açıklama)</label>
                                <input type="text" name="category[description]" value="{{ category.description }}" class="form-control" required="required" placeholder="Kısa Açıklama">
                            </div>
                            <div class="form-group col-lg-5">
                                <label>DURUM</label>
                                <select name="category[status]" class="form-control">
                                    <option>{{ category.status }}</option>
                                    <option value="True">True</option>
                                    <option selected value="False">False</option>
                                </select>
                            </div>
                            <br/><br/><br/><br/>
                            <button type="submit" class="btn btn-outline btn-success">KAYDET</button>
                        </form>
                    </div>
                    <!-- /.col-lg-6 (nested) -->
                </div>
                <!-- /.row (nested) -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>